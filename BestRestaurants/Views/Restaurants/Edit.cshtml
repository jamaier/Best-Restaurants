@{
  Layout = "_Layout";
}

@model BestRestaurants.Models.Restaurant

<h2>Edit</h2>

<h4>Edit this restaurant: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.RestaurantId)

  @Html.LabelFor(model => model.Name)
  @Html.EditorFor(model => model.Name)
  @Html.LabelFor(model => model.Dish)
  @Html.EditorFor(model => model.Dish)
  @Html.LabelFor(model => model.Price)
  @Html.EditorFor(model => model.Price)
  @Html.LabelFor(model => model.Location)
  @Html.EditorFor(model => model.Location)


  @Html.LabelFor(model => model.CuisineType)
  @Html.DropDownList("CuisineTypeId")

  <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to list", "Index")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>