@{
  Layout = "_Layout";
}

@model BestRestaurants.Models.Restaurant

<p><strong>NOTE:</strong> You need to have at least one cuisine type before you can add an restaurant!</p>
<p>Go to @Html.ActionLink("This page", "Create", "CuisineTypes") to create a cuisine type.</p>

<h4>Add a new Restaurant</h4>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)
  @Html.LabelFor(model => model.Dish)
  @Html.TextBoxFor(model => model.Dish)
  @Html.LabelFor(model => model.Price)
  @Html.TextBoxFor(model => model.Price)
  @Html.LabelFor(model => model.Location)
  @Html.TextBoxFor(model => model.Location)


  @Html.LabelFor(model => model.CuisineType)
  @Html.DropDownList("CuisineTypeId")

  <input type="submit" value="Add new Restaurant" class="link" />
}
<p>@Html.ActionLink("Show all items", "Index", null, new { @class = "link" })</p>
<p>@Html.ActionLink("Home", "Index", "Home", null, new { @class = "link" })</p>