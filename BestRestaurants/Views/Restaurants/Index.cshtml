@{
  Layout = "_Layout";
}

@using BestRestaurants.Models;

<h1>Restaurants: </h1>

@if (@Model.Count == 0)
{
  <h3>No Restaurants have been added at this time.</h3>
} 
else
{
  <ul>
    @foreach (Restaurant restaurant in Model)
    {
      <p>@Html.ActionLink($"{restaurant.Name}", "Details", new { id = restaurant.RestaurantId })</p>
    }
  </ul>
}

<p>@Html.ActionLink("Add new Restaurant", "Create", null,  new { @class = "link" })</p>
<p>@Html.ActionLink("See all cuisine types", "Index", "CuisineTypes",null,  new { @class = "link" })</p>
<p>@Html.ActionLink("Home", "Index", "Home",null,  new { @class = "link" })</p>