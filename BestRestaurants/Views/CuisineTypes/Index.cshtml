@{
  Layout = "_Layout";
}

@using BestRestaurants.Models;

<h1>Cuisine: </h1>

@if (@Model.Count == 0)
{
  <h3>No Cuisine Type has been added yet!</h3>
} 
else
{
  <ul>
    @foreach (CuisineType cuisineType in Model)
    {
      <li>@Html.ActionLink($"{cuisineType.Cuisine}", "Details", "CuisineTypes", new { id = cuisineType.CuisineTypeId })</li>
    }
  </ul>
}

<p>@Html.ActionLink("Add new Cuisine Type", "Create", null,  new { @class = "link" })</p>
<p>@Html.ActionLink("Add new Restaurant", "Create", "Restaurants", null,  new { @class = "link" })</p>
<p>@Html.ActionLink("Home", "Index", "Home", null,  new { @class = "link" })</p>