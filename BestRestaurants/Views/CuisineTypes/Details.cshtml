@{
  Layout = "_Layout";
}

@model BestRestaurants.Models.CuisineType
@using BestRestaurants.Models

<h2>Cuisine Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Cuisine): @Html.DisplayFor(model => model.Cuisine)</h3>

@if (@Model.Restaurants.Count == 0)
{
  <h3>No cuisine types have been added!</h3>
} 
else
{
  <h3>Restaurants:</h3>
  <ul>
    @foreach (Restaurant restaurant in Model.Restaurants)
    {
      <li>@Html.ActionLink($"{restaurant.Name}", "Details", "Restaurants", new { id = restaurant.RestaurantId })</li>
    }
  </ul>
}

<p>@Html.ActionLink("Edit Category", "Edit", new { id = Model.Cuisine })</p>
<p>@Html.ActionLink("Delete Category", "Delete", new { id = Model.Cuisine })</p>
<p>@Html.ActionLink("Back to list", "Index")</p>